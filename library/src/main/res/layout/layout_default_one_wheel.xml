<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true">

    <com.github.kilnn.wheelview.WheelView
        android:id="@+id/wheel_view"
        style="?wheelLayoutWheelViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_place_holder"
        style="?wheelLayoutWheelItemTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lines="1"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_des"
        style="?wheelLayoutWheelDesTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_place_holder"
        android:gravity="center"
        android:lines="1"
        android:visibility="gone"/>

</RelativeLayout>